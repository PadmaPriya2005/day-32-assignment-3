#include <stdio.h>

int addition(int a, int b)
{
    int sum = a + b;
    return sum;
}

int subtraction(int a, int b)
{
    return a - b;
}

int multiplication(int a, int b)
{
    return a * b;
}

float division(int num1, int num2)
{
    return num1 / num2;
}

int modulus(int a, int b)
{
    return a % b;
}

int main()
{   
    int a, b;
    
    printf("Enter the First Number  = ");
    scanf("%d",&a);

    printf("Enter the Second Number = ");
    scanf("%d",&b);

    printf("Arithemetic Operations on Integer Values\n");

    printf("Addition       = %d\n", addition(a, b)); 
    printf("subtraction    = %d\n", subtraction(a, b));
    printf("multiplication = %d\n", multiplication(a, b));
    printf("division       = %.2f\n", division(a, b));
    printf("modulus        = %d\n", modulus(a, b));
}
